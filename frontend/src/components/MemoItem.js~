import React from "react";
import styled from "styled-components";

const Item = styled.div`
  background: white;
  border: 1px solid #ddd;
  margin-bottom: 12px;
  padding: 16px;
  border-radius: 8px;
  position: relative;
`;

const DeleteButton = styled.button`
  position: absolute;
  top: 8px;
  right: 8px;
  background: transparent;
  border: none;
  font-size: 18px;
  color: #dc3545;
  cursor: pointer;
`;

const MemoItem = ({ memo, onDelete }) => {
  return (
    <Item>
      <h3>{memo.title}</h3>
      <p>{memo.content}</p>
      <small>{new Date(memo.created_at).toLocaleString()}</small>
      <DeleteButton onClick={() => onDelete(memo.note_id)}>¡¿</DeleteButton>
    </Item>
  );
};

export default MemoItem;
